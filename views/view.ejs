<%- include("partials/header.ejs") %>
<body>
    

<div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
    <div class="col-lg-6 px-0">
    <div class="container mt-5">
        <h1 class="mb-4">Submitted Blogs</h1>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h2 class="display-4 fst-italic"><%= blog.title %></h2>
                        <p class="lead my-3"><%= blog.content %></p>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>No blogs submitted yet.</p>
        <% } %>
    </div>
    </div>
    </div>
</body>
